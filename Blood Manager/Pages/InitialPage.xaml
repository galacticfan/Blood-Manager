<Page x:Class="Blood_Manager.InitialPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="628" d:DesignWidth="1000"
	Title="Page1" ShowsNavigationUI="False">
    
    <Page.Background>
        <RadialGradientBrush>
            <GradientStop Color="#FFE6EDF0" Offset="0"/>
            <GradientStop Color="#FFD4D7E0" Offset="1"/>
        </RadialGradientBrush>
    </Page.Background>
    
    <Page.Resources>
        <ResourceDictionary Source="StylesDictionary.xaml" />
    </Page.Resources>
    
    <Grid>
        <Button x:Name="localModeBtn" Style="{StaticResource MainButtonStyle}"  Content="local mode" HorizontalAlignment="Left" Margin="607,302,0,0" VerticalAlignment="Top" Width="310" FontSize="50" Height="137" Click="localModeBtn_Click" />
    </Grid>
</Page>
